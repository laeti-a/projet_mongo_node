doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="//unpkg.com/semantic-ui@2.4.2/dist/semantic.min.css")
        link(rel="stylesheet", href="./public/css/style.css")
        script(src="//unpkg.com/jquery@3.1.1/dist/jquery.min.js")
        script(src="//unpkg.com/semantic-ui@2.4.2/dist/semantic.min.js")
        block scripts

        title New-York Restaurants
    body
        .ui.menu(style="font-family:Courier;font-size:1.2em")
            img(src="img/logo.png", alt="Logo website N-Y Restaurants", style="width:7%")
            a.item(href="/", class=(currentRoute === "/" ? "active" : ""))
                i.home.icon
                | Home
            a.item(href="/restos", class=(currentRoute === "/restos" ? "active" : ""))
                | Restaurants
            a.item(href="/explore", class=(currentRoute === "/explore" ? "active" : ""))
                | Explore
            a.item(href="/rating", class=(currentRoute === "/rating" ? "active" : ""))
                | Rate
            a.item(href="/addRestaurant", class=(currentRoute === "/addRestaurant" ? "active" : ""))
                | Add Restaurant

        block content